float temp;

void setup() {

pinMode (13, OUTPUT);
Serial.begin (9600);
}
void loop() {

temp= analogRead (A0);

temp= (temp*500)/1024;

Serial.println (temp);

if (temp>30)

digitalWrite (13, HIGH);
else
digitalWrite (13, LOW);
delay (1000);
}

/*
pinMode(13, OUTPUT);
â†’ Sets digital pin 13 as an output (to control LED).

Serial.begin(9600);
â†’ Initializes Serial Communication at a baud rate of 9600 bps
â†’ Required for sending temperature data to Serial Monitor.

analogRead(A0);
Reads analog voltage from pin A0 where the LM35 is connected.

ADC Range: 0 to 1023 (10-bit)

Voltage Range: 0V to 5V

ðŸ”¸ temp = (temp * 500) / 1024;
Converts analog value to temperature in Â°C.

LM35 outputs 10 mV per Â°C â†’ 100Â°C = 1V
